<h1>Create a New Job</h1>

<form method="post" action="/admin/new-job">
    <div class="mb-3">
        <label for="name" class="form-label">Job Name:</label>
        <input type="text" id="name" name="position" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <input type="text" id="description" name="description" class="form-control" required />
    </div>

    <label for="salary" class="form-label">Instructor:</label>
    <input type="text" id="salary" name="salary" class="form-control" required />

    <hr />
    <div style="display: flex; justify-content:space-between;">
        <a class="btn btn-outline-primary" href="/admin">Back</a>
        <div>
            <button type="reset" class="btn btn-outline-default">Reset</button>
            <button type="submit" class="btn btn-primary">Create Job</button>
        </div>
    </div>
</form>